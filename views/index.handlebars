<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">{{user.fname}} {{user.lname}}</h3>
        </div>
        <div class="panel-body">
          <form class="form-horizontal" method="POST">
  					<div class="form-group">
							<label class="control-label col-xs-3">First Name</label>
							<div class="col-xs-9">
								<input type="text" class="form-control" value="{{user.fname}}" disabled/>
							</div>
						</div>

						<div class="form-group">
              <label class="control-label col-xs-3">Last Name</label>
              <div class="col-xs-9">
                <input type="text" class="form-control" value="{{user.lname}}" disabled/>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-xs-3">Email</label>
              <div class="col-xs-9">
                <input type="text" class="form-control" value="{{user.email}}" disabled/>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-xs-3">Token</label>
              <div class="col-xs-9">
                <input type="text" class="form-control" value="{{user.apiToken}}" disabled/>
              </div>
            </div>

          </form>
        </div>
        <div class="panel-footer">

        </div>
      </div>
    </div>
  </div>
</div>
