<div class="container-fluid">
  <div class="row" style="margin-top:1em;">
    {{#if error}}
      <h4 class="text-danger" style="text-align:center;">Error with username or password</h4>
    {{/if}}
    <div class="col-sm-6 col-sm-offset-3" style="border:2px solid black; text-align:center; border-radius: 1em;">
      <form action="/register" method="post" class="form-group">
        <h4> Sign Up </h4>
        <input type="text" name="fname" placeholder="First Name" class="form-control"><br>
        <input type="text" name="lname" placeholder="Last Name" class="form-control"><br>
        <input type="email" name="email" placeholder="Email" class="form-control"><br>
        <input type="password" name="password" placeholder="Password" class="form-control"><br>
        <button type="submit" class="btn btn-success">Sign Up</button>
      </form>
    </div>
  </div>
</div>
